.videoContainer .header{
  display: flex;
  padding-top: 10rpx;
}
.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search{
  border: 1px solid black;
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #d43c33;
}

/* 导航区 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navContent{
  box-sizing: border-box;
  height: 60rpx;
}
.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navItem .active{
  border-bottom: 1rpx solid #d43c33;
}
.videoScroll{
  padding-top: 10rpx;
  /* calc:可以动态计算css的宽高 */
  /* 视口单位：vh vw 1vh = 1%的视口高度  1vm = 1%的视口宽度*/
  height: calc(100vh - 152rpx);
}
/* 视频列表 */
.videoItem{
  padding: 0 3%;
}
